{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "rootDir": "./",
    "outDir": "./types",
    "module": "NodeNext",
    "target": "ESNext",
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": true,
    "strict": true,
    // "noImplicitOverride": true,
    // "noPropertyAccessFromIndexSignature": true,
    // "noUncheckedIndexedAccess": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    // "noUnusedParameters": true
  },
  "exclude": [
    "types",
    "bin"
  ]
}